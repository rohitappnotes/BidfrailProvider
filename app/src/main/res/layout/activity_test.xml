<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/card_reviews_edittext"
        android:orientation="vertical">



    </LinearLayout>


    <com.library.utilities.BlinkLayout
        android:id="@+id/blinkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blink_animation_duration="1200"
        app:blink_color="@color/colorRedButton_Pressed">

        <Button
            android:id="@+id/button"
            style="@style/SmallRoundedButton_Red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Button" />
    </com.library.utilities.BlinkLayout>

    <ImageButton
        android:id="@+id/record_btn"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/record_btn_start"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />
</LinearLayout>